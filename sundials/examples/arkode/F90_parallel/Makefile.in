SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

F90FLAGS     = @F90FLAGS@
F90_LDFLAGS  = @F90_LDFLAGS@
F90_LIBS     = @F90_LIBS@

MPIF90       = @MPIF90@
MPI_INC_DIR  = @MPI_INC_DIR@
MPI_FLAGS    = @MPI_FLAGS@
MPIF90_LNKR  = @MPIF90_LNKR@
MPI_LIB_DIR  = @MPI_LIB_DIR@
MPI_LIBS     = @MPI_LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_LIBS = $(top_builddir)/src/arkode/fcmix/libsundials_farkode.la     \
                $(top_builddir)/src/arkode/libsundials_arkode.la            \
                $(top_builddir)/src/nvec_par/libsundials_fnvecparallel.la \
                $(top_builddir)/src/nvec_par/libsundials_nvecparallel.la

fortran-update = ${SHELL} ${top_builddir}/bin/fortran-update.sh

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

EXAMPLES = 
EXTRAFILES = # none yet

OBJECTS = ${EXAMPLES:=${OBJ_EXT}}
EXECS = ${EXAMPLES:=${EXE_EXT}}

# ----------------------------------------------------------------------------------------------------------------------

all:
	@for i in ${EXAMPLES} ; do \
	  ${fortran-update} ${srcdir} $${i}.f90 ; \
	  ${LIBTOOL} --mode=compile ${MPIF90} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c ${builddir}/$${i}-updated.f90 ; \
	  ${LIBTOOL} --mode=link ${MPIF90_LNKR} -o ${builddir}/$${i}${EXE_EXT} ${builddir}/$${i}-updated${OBJ_EXT} ${MPI_FLAGS} ${F90_LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F90_LIBS} $(BLAS_LAPACK_LIBS) ; \
	done

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/arkode/F90_parallel
	$(INSTALL_FILE) Makefile_ex  $(EXS_INSTDIR)/arkode/F90_parallel/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/arkode/F90_parallel/README  $(EXS_INSTDIR)/arkode/F90_parallel/
	for i in ${EXAMPLES} ; do \
	  $(INSTALL_FILE) $(top_srcdir)/examples/arkode/F90_parallel/$${i}.f90 $(EXS_INSTDIR)/arkode/F90_parallel/ ; \
	  $(INSTALL_FILE) $(top_srcdir)/examples/arkode/F90_parallel/$${i}.out $(EXS_INSTDIR)/arkode/F90_parallel/ ; \
	done
	for i in ${EXTRAFILES} ; do \
	  $(INSTALL_FILE) $(top_srcdir)/examples/arkode/F90_parallel/$${i} $(EXS_INSTDIR)/arkode/F90_parallel/ ; \
	done

uninstall:
	rm -f $(EXS_INSTDIR)/arkode/F90_parallel/Makefile
	rm -f $(EXS_INSTDIR)/arkode/F90_parallel/README
	for i in ${EXAMPLES} ; do \
	  rm -f $(EXS_INSTDIR)/arkode/F90_parallel/$${i}.f90 ; \
	  rm -f $(EXS_INSTDIR)/arkode/F90_parallel/$${i}.out ; \
	done
	for i in ${EXTRAFILES} ; do \
	  rm -f $(EXS_INSTDIR)/arkode/F90_parallel/$${i} ; \
	done
	$(rminstalldirs) $(EXS_INSTDIR)/arkode/F90_parallel
	$(rminstalldirs) $(EXS_INSTDIR)/arkode

clean:
	rm -rf .libs
	rm -f *.lo *.o
	rm -f *-updated.f90
	rm -f ${OBJECTS}
	rm -f $(EXECS)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
