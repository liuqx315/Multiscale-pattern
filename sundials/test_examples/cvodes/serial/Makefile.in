SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include -I$(top_builddir)/include

SUNDIALS_LIBS = $(top_builddir)/src/cvodes/libsundials_cvodes.la          \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

EXEC_FILES = cvsminhx$(EXE_EXT) \
	     cvs2odex$(EXE_EXT) \
	     cvsnegsolx$(EXE_EXT) \
	     cvsdiscx$(EXE_EXT) \
	     cvsfwdswitchx$(EXE_EXT) \
	     cvsicx$(EXE_EXT)

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)

install: $(EXEC_FILES)

uninstall:

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

# ----------------------------------------------------------------------------------------------------------------------

cvsminhx$(EXE_EXT): $(srcdir)/cvsminhx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsminhx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvsminhx$(EXE_EXT) $(builddir)/cvsminhx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvs2odex$(EXE_EXT): $(srcdir)/cvs2odex.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvs2odex.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvs2odex$(EXE_EXT) $(builddir)/cvs2odex$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvsnegsolx$(EXE_EXT): $(srcdir)/cvsnegsolx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsnegsolx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvsnegsolx$(EXE_EXT) $(builddir)/cvsnegsolx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvsdiscx$(EXE_EXT): $(srcdir)/cvsdiscx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsdiscx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvsdiscx$(EXE_EXT) $(builddir)/cvsdiscx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvsfwdswitchx$(EXE_EXT): $(srcdir)/cvsfwdswitchx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsfwdswitchx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvsfwdswitchx$(EXE_EXT) $(builddir)/cvsfwdswitchx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvsicx$(EXE_EXT): $(srcdir)/cvsicx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsicx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvsicx$(EXE_EXT) $(builddir)/cvsicx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
